<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogconstr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <TextView
            android:id="@+id/add_image_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add image"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="31dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_add"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:src="@drawable/add_prod_main_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_image_txt" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:text="cancel"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/image_add"
            app:layout_constraintTop_toBottomOf="@+id/image_add" />


        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:text="confirm"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/image_add"
            app:layout_constraintTop_toBottomOf="@+id/image_add" />

</androidx.constraintlayout.widget.ConstraintLayout>